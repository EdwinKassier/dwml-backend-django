# =============================================================================
# Django REST API Boilerplate - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# Never commit .env to version control!
#
# Generate SECRET_KEY with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# REQUIRED: Django secret key for cryptographic signing
# Generate a new one for each environment
SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (True for development, False for production)
DEBUG=True

# Comma-separated list of allowed hostnames
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database connection URL
# SQLite (development):  sqlite:///db.sqlite3
# PostgreSQL (production): postgresql://user:password@host:port/database
# MySQL (production): mysql://user:password@host:port/database
DATABASE_URL=sqlite:///db.sqlite3

# -----------------------------------------------------------------------------
# CORS (Cross-Origin Resource Sharing)
# -----------------------------------------------------------------------------

# Comma-separated list of allowed origins for CORS
# Typically your frontend application URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# External APIs (EXAMPLE - Replace with your own)
# -----------------------------------------------------------------------------

# Example: Cryptocurrency API key (used by example app)
# Replace with your own API keys for your application
CRYPTO_API_KEY=your-api-key-here

# Example: Add your own API keys here
# STRIPE_API_KEY=your-stripe-key
# SENDGRID_API_KEY=your-sendgrid-key
# AWS_ACCESS_KEY_ID=your-aws-key
# etc.

# -----------------------------------------------------------------------------
# Monitoring & Error Tracking (Optional)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking (optional)
# Sign up at https://sentry.io/ to get a DSN
SENTRY_DSN=

# Environment name for tracking
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Security Settings (Production)
# -----------------------------------------------------------------------------

# SSL/HTTPS settings (set to True in production with HTTPS)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Set to True in production
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# -----------------------------------------------------------------------------
# Optional: Additional Settings
# -----------------------------------------------------------------------------

# Email configuration (for password resets, notifications, etc.)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password

# Redis cache (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Celery (if using background tasks)
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0
